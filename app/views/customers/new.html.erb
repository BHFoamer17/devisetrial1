            <label for="industry_type_id" class="col-sm-2 control-label">
              Industry type
            </label>
            <div class="col-sm-10">
              <input type="text" id="industry_type_id" name="industry_type_id" placeholder="Industry type" class="form-control" value="<%= @customer.industry_type_id %>">
            </div>
          </div>

          <!-- Label and input for space_type_id -->
