              <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @customer.city %>">
            </div>
          </div>

          <!-- Label and input for website -->
          <div class="form-group">
            <label for="website" class="col-sm-2 control-label">
              Website
            </label>
            <div class="col-sm-10">
              <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @customer.website %>">
            </div>
          </div>

          <!-- Label and input for company -->
          <div class="form-group">
            <label for="company" class="col-sm-2 control-label">
