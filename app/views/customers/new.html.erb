            <label for="business_id" class="col-sm-2 control-label">
              Business
            </label>
            <div class="col-sm-10">
              <input type="text" id="business_id" name="business_id" placeholder="Business" class="form-control" value="<%= @customer.business_id %>">
            </div>
          </div>

          <!-- Label and input for country -->
          <div class="form-group">
            <label for="country" class="col-sm-2 control-label">
              Country
            </label>
            <div class="col-sm-10">
              <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @customer.country %>">
